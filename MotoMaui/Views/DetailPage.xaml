<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MotoMaui.DetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:MotoMaui.ViewModels"
    x:DataType="viewmodel:DetailViewModel">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*">
            <BoxView
                BackgroundColor="{StaticResource Primary}"
                Grid.RowSpan="2"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"/>

            <Border StrokeShape="RoundRectangle 80"
                    Stroke="White"
                    StrokeThickness="6"
                    HeightRequest="172"
                    WidthRequest="172"
                    Margin="0,8,0,0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Image Aspect="AspectFill"
                       HeightRequest="160"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Source="{Binding Motorcycle.Image}"
                       WidthRequest="160"/>
            </Border>

            <Label Style="{StaticResource LargeLabel}"
                   Grid.Row="1"
                   TextColor="White"
                   FontAttributes="Bold"
                   Text="{Binding Motorcycle.Model}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,8"/>

            <VerticalStackLayout Grid.Row="2"
                                 Padding="10"
                                 Spacing="10">
                <!-- Add this -->
                <!-- <Button Text="Show on Map"
                        Command="{Binding OpenMapCommand}"
                        HorizontalOptions="Center"
                        WidthRequest="200"
                        Margin="8"
                        Style="{StaticResource ButtonOutline}"/> -->

                <Label Style="{StaticResource MediumLabel}"
                       Text="{Binding Motorcycle.Type, StringFormat='Type: {0}'}"/>
                <Label Style="{StaticResource SmallLabel}"
                       Text="{Binding Motorcycle.Year, StringFormat='Year: {0}'}"/>
                <Label Style="{StaticResource SmallLabel}"
                       Text="{Binding Motorcycle.Engine, StringFormat='Engine: {0}'}"/>
                <Label Style="{StaticResource SmallLabel}"
                       Text="{Binding Motorcycle.Horsepower, StringFormat='Horsepower: {0}'}"/>
                <Label Style="{StaticResource SmallLabel}"
                       Text="{Binding Motorcycle.Torque, StringFormat='Torque: {0}'}"/>
                <Label Style="{StaticResource SmallLabel}"
                       Text="{Binding Motorcycle.Weight, StringFormat='Weight: {0}'}"/>
                <Label Style="{StaticResource SmallLabel}"
                       Text="{Binding Motorcycle.Price, StringFormat='Price: {0}'}"/>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
